<body>
    @include('includes.nav')
    <div class="card">
      <!--la partie header de la page-->
      <div class="msg-header">
          <div class="nbr-likes">
              <i class="fa fa-thumbs-up" aria-hidden="true"></i>
          <h4 class="fa">{{project.likesNumber}}</h4>
              <i class="fa fa-angle-right fa-lg" aria-hidden="true"></i>
          </div>
          <div class="like">
              <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
          </div>
      </div>
      <!--la partie page commentaire-->
      <div class="chat-page">
            <div class="msg-inbox">
                <div class="chats">
                    <div class="msg-page">
                        @each(comment in commentNotifications)
                        <div class="received-chats">
                            <div class="received-chats-img">
                            <img src="{{comment.notifierAvatar}}">
                            </div>
                            <div class="received-msg">
                                <div class="received-msg-inbox">
                                   <p>{{comment.content}}</p>
                                   <span class="time">{{comment.date}}</span>
                                </div>
                            </div>  
                        </div>
                        @else 
                        <h2>No comment yet</h2>
                        @endeach    
                    </div>
                </div>
            </div>
            <!--la partie bottom de la page-->
            <form action="/add-comment" method="POST">
            <div class="msg-bottom">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Add Comment ..." name="comment">
                    <input type="hidden" value="{{project.id}}" name="projectId">
                    <button type="submit">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fa fa-paper-plane"></i>
                        </span>
                    </div>
                    </button>
                </div>
            </div> 
        </form>   
      </div>
    </div>     
  

 
